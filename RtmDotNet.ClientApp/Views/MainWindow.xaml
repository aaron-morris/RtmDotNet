<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RtmDotNet.ClientApp.ViewModels;assembly=RtmDotNet.ClientApp"
        Icon="resm:RtmDotNet.ClientApp.Assets.avalonia-logo.ico"
        Title="RtmDotNet.ClientApp">

  <Design.DataContext>
    <vm:MainWindowViewModel/>
  </Design.DataContext>
  
  <TreeView Items="{Binding Children}" Width="250" Height="350">
        <TreeView.ItemTemplate>
          <TreeDataTemplate ItemsSource="{Binding Children}">
            <TextBlock Text="{Binding Name}"/>
          </TreeDataTemplate>
        </TreeView.ItemTemplate>
      </TreeView>
  
</Window>